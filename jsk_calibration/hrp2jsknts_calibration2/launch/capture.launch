<launch>

  <arg name="velocity_factor" default="1.0" />

  <rosparam command="delete" param="robot_calibration" />
  <node pkg="robot_calibration" type="calibrate" name="robot_calibration"
        args="$(find jsk_calibration)/hrp2jsknts_calibration2/config/calibration_poses.bag"
        output="screen" required="true">
    <param name="velocity_factor" value="$(arg velocity_factor)" />
    <rosparam file="$(find jsk_calibration)/hrp2jsknts_calibration2/config/capture.yaml" command="load" />
    <rosparam file="$(find jsk_calibration)/hrp2jsknts_calibration2/config/calibrate.yaml" command="load" />
  </node>

  <node pkg="rosbag" type="record" name="calibration_bagger" output="screen"
        args="--bz2 -o /tmp/hrp2jsknts_calibration2/calibration_data calibration_data robot_description" >
    <param name="mkdir_tmp" command="mkdir -m 777 -p /tmp/hrp2jsknts_calibration2" />
  </node>

</launch>
